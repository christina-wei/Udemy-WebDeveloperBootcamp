<%- include partials/header.ejs %>

<div class="container">

	<div class="row">
		<h1 id="newTitle">Add a New Campground</h1>
		<div id="campForm">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="campName" placeholder="campground name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="campImg" placeholder="campground image URL">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
	</div>

</div>

